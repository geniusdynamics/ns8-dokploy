#
# This systemd unit starts a coolify instance using Podman.
# Most parts of this file come from podman-generate-systemd.
#

[Unit]
Description=Podman coolify.service
Requires=coolify-app.service -app.service -app.service coolify-realtime-app.service 
Before=coolify-app.service -app.service -app.service coolify-realtime-app.service 

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
EnvironmentFile=-%S/state/environment
Restart=always
TimeoutStopSec=70
ExecStartPre=/bin/rm -f %t/coolify.pid %t/coolify.pod-id
ExecStartPre=/usr/bin/podman pod create --infra-conmon-pidfile %t/coolify.pid  --pod-id-file %t/coolify.pod-id  --name coolify  --publish 127.0.0.1:${TCP_PORT}:80  --replace
ExecStart=/usr/bin/podman pod start --pod-id-file %t/coolify.pod-id
ExecStop=/usr/bin/podman pod stop --ignore --pod-id-file %t/coolify.pod-id -t 10
ExecStopPost=/usr/bin/podman pod rm --ignore -f --pod-id-file %t/coolify.pod-id
PIDFile=%t/coolify.pid
Type=forking

[Install]
WantedBy=default.target
